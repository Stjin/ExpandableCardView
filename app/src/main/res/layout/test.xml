<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/expand_card_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/module_always_on_display_CardText"
        style="@style/MaterialCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/card_module_always_on_display_enable_switch"
        android:text="@string/lorem" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/card_module_always_on_display_enable_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/module_always_on_display_CardText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp" />


</RelativeLayout>